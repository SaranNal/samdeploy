{
    "executionRoleArn": "arn:aws:iam::387387405527:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "saran-api",
            "image": "<SARAN_API_IMAGE>",
            "cpu": 0,
            "memoryReservation": 1024,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "LOG_CHANNEL",
                    "value": "errorlog"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "<SARAN_APP_NAME>",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": null
        },
        {
            "name": "saran-admin-portal",
            "image": "<SARAN_API_IMAGE>",
            "cpu": 0,
            "memoryReservation": 1024,
